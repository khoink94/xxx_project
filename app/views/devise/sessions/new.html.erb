
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-input">
    <h2 class="form-input-heading">Log in</h2>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, type:"email", class: 'col-sm-8 control-label', placeholder: "Enter your Email" %><br />
  </div>

  <div class="form-input">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", type:"password", class: 'col-sm-8 control-label',placeholder:"Enter your password" %><br />
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-input">
    <div class:"checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br />
    </div>
    </div>
  <% end -%>

  <div class="form-action">
    <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
